{
  "name": "wikibase-termbox",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "WEBPACK_TARGET=dev vue-cli-service serve",
    "dev-server": "concurrently \"tsc -w --project tsconfig.server.json\" \"nodemon serverBuild/server/server.js\"",
    "build": "NODE_ENV=production vue-cli-service build",
    "build-server": "NODE_ENV=production WEBPACK_TARGET=node vue-cli-service build && tsc -p tsconfig.server.json && rm -rf node_modules/.cache",
    "fix": "tslint --format codeFrame --fix --project tsconfig.all.json -c tslint.json",
    "test": "npm-run-all test:*",
    "test:lint": "tslint --format codeFrame --project tsconfig.all.json -c tslint.json && stylelint --syntax scss 'src/**/*.(vue|scss)'",
    "test:unit": "vue-cli-service test:unit",
    "test:distnodiff": "NODE_ENV=production vue-cli-service build --dest /tmp/dist && diff -q ./dist/wikibase.termbox.main.css /tmp/dist/wikibase.termbox.main.css && diff -q ./dist/wikibase.termbox.main.js /tmp/dist/wikibase.termbox.main.js"
  },
  "_moduleAliases": {
    "@": "serverBuild/"
  },
  "dependencies": {
    "bootstrap": "^4.2.1",
    "express": "^4.16.4",
    "http-status-codes": "^1.3.0",
    "module-alias": "^2.1.0",
    "mwbot": "^1.0.10",
    "rtl-detect": "^1.0.2",
    "ts-deferred": "^1.0.4",
    "tslib": "^1.9.3",
    "validate.js": "^0.12.0",
    "vue": "^2.5.22",
    "vue-class-component": "^6.3.2",
    "vue-property-decorator": "^7.3.0",
    "vue-server-renderer": "^2.5.22",
    "vuex": "^3.1.0"
  },
  "devDependencies": {
    "@types/cheerio": "^0.22.10",
    "@types/dotenv": "^4.0.3",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.11",
    "@types/nock": "^9.3.0",
    "@types/node": "^10.12.18",
    "@types/supertest": "^2.0.7",
    "@vue/cli-plugin-babel": "^3.2.2",
    "@vue/cli-plugin-typescript": "^3.2.2",
    "@vue/cli-plugin-unit-jest": "^3.2.3",
    "@vue/cli-service": "^3.2.3",
    "@vue/server-test-utils": "^1.0.0-beta.29",
    "@vue/test-utils": "^1.0.0-beta.28",
    "babel-core": "7.0.0-bridge.0",
    "concurrently": "^4.1.0",
    "jest-dom": "^2.1.1",
    "nock": "^10.0.6",
    "node-sass": "^4.11.0",
    "nodemon": "^1.18.9",
    "npm-run-all": "^4.1.5",
    "reset-css": "^4.0.1",
    "sass-loader": "^7.0.1",
    "stylelint": "^9.10.1",
    "stylelint-config-wikimedia": "^0.5.0",
    "stylelint-processor-html": "^1.0.0",
    "stylelint-scss": "^3.5.2",
    "supertest": "^3.4.1",
    "ts-jest": "^23.10.5",
    "typescript": "^3.2.4",
    "url-search-params-polyfill": "^5.0.0",
    "vue-template-compiler": "^2.5.22"
  }
}
